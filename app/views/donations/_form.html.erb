<%= form_for(@donation) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <span><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</span>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :donor %><br>
    <%= f.text_area :donor, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :donation_type %><br>
    <%= f.select :donation_type, options_for_select([ "Ração", "Medicamento" ], "Ração"), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :animal_id %><br>
    <%= f.select :animal_id, options_for_select(@animals.collect{ |u| [u.name, u.id] }), {:include_blank => ""}, :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-success" %>
  </div>
<% end %>
