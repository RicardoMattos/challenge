<%= form_for(@attendance) do |f| %>
  <% if @attendance.errors.any? %>
    <div id="error_explanation">
      <span><%= pluralize(@attendance.errors.count, "error") %> prohibited this attendance from being saved:</span>

      <ul>
      <% @attendance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Date" %><br>
    <%= f.date_select :dt, { start_year: 2018 } %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :animal_id %><br>
      <%= f.select :animal_id, options_for_select(@animals.collect{ |u| [u.name, u.id] }), {}, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :vet_id %><br>
      <%= f.select :vet_id, options_for_select(@vets.collect{ |u| [u.name, u.id] }), {}, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :obs %><br>
    <%= f.text_area :obs, :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-success" %>
  </div>
<% end %>
