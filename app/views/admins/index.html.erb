<p id="notice"><%= notice %></p>

<h3>Listing Admins</h3>

<table class="table table-sm">
  <thead class="text-center">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= link_to 'Show', admin, class: "btn btn-secondary btn-sm btn-block" %></td>
        <td><%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-secondary btn-sm btn-block" %></td>
        <td><%= link_to 'Destroy', admin, class: "btn btn-danger btn-sm btn-block", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin', new_admin_path, class: "btn btn-primary" %>
